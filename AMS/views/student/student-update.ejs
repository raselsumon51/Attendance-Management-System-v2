<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-6">
      <div class="card mt-1">
        <div class="card-header">
          <h3 class="text-center">Update Info</h3>
        </div>
        <div class="card-body">
          <form action="/student/<%= student._id %>/update" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="student_id">Student ID:</label>
              <input type="number" class="form-control mb-1" name="student_id" value="<%= student.student_id %>">
            </div>
            <div class="form-group">
              <label for="name">Name:</label>
              <input type="text" class="form-control mb-1" name="name" value="<%= student.name %>">
            </div>
            <div class="form-group">
              <label for="name">Email:</label>
              <input type="email" class="form-control mb-1" name="email" value="<%= student.email %>">
            </div>
            <div class="form-group">
              <label for="name">Phone:</label>
              <input type="number" class="form-control mb-1" name="phone" value="<%= student.phone %>">
            </div>
            <div class="form-group">
              <label for="name">Session:</label>
              <input type="text" class="form-control mb-1" name="session" value="<%= student.session %>">
            </div>
            <div class="form-group">
              <label for="name">Address:</label>
              <input type="text" class="form-control mb-1" name="address" value="<%= student.address %>">
            </div>
            <div class="form-group">
              <label for="name">Upload Image:</label>
              <input type="file" class="form-control mb-3" name="image">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
