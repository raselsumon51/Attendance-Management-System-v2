<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9 card px-5 pb-5">
            <h3 class="my-5 text-center">Choose a Course</h3>

            <% if (courses.length> 0) { %>
                <form action="/course/marks-form" method="post">
                    <div class="form-group">
                        <label for="courses" class="form-label">Choose a course:</label>
                        <select class="form-select" name="course_id">
                            <% courses.forEach(course=> { %>
                                <option value="<%= course._id %>">
                                    <%= course.name %>
                                </option>
                                <% }); %>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Next</button>
                </form>
                <% } else { %>
                    <p>You are not assigned to any course.</p>
                    <% } %>
        </div>
    </div>
</div>