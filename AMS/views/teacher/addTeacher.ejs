<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm p-4">
        <h3 class="text-center mb-4">Add Teacher</h3>
        <form action="/teacher/add" method="post">
          <div class="mb-3">
            <label for="teacher_email" class="form-label">Teacher Email</label>
            <input type="email" class="form-control" id="teacher_email" placeholder="Enter email" name="teacher_email" required>
          </div>
          <div class="mb-3">
            <label for="teacher_pass" class="form-label">Password</label>
            <input type="password" class="form-control" id="teacher_pass" placeholder="Enter Password" name="teacher_pass" required>
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-dark btn-lg">Add</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- Form for uploading an Excel file -->
<form action="/teacher/upload" method="post" enctype="multipart/form-data">
  <div class="mb-3">
    <label for="teacher_file" class="form-label">Upload Excel File</label>
    <input type="file" class="form-control" id="teacher_file" name="teacher_file" accept=".xlsx,.xls" required>
  </div>
  <div class="d-grid gap-2">
    <button type="submit" class="btn btn-primary btn-lg">Upload</button>
  </div>
</form>