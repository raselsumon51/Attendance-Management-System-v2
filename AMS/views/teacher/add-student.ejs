<div class="container ">
        <div class="row  d-flex justify-content-center">
            <div class="col-lg-4 login_style p-2 bg-white ">
                <h4 class="mb-4 text-center">Add Student</h4>
                <% if (message) { %>
                    <p class="bg-primary"><%= message %></p>
                <% } %>
                <form action="/student/store-form-data" method="post" class="form">
                    <div class="mb-3">
                        <label for="student_id" class="form-label">Student ID:</label>
                        <input required type="number" class="form-control" id="student_id" placeholder="Enter student ID" name="student_id">
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input required type="text" class="form-control" id="name" placeholder="Enter name" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input required type="email" class="form-control" id="email" placeholder="Enter email" name="email">
                    </div>
                    <div class="mb-0">
                        <!-- <label for="password" class="form-label">Password:</label> -->
                        <input  type="hidden" class="form-control" id="password" placeholder="Enter password" name="password" value="123456">
                    </div>
                    <div class="mb-0">
                        <!-- <label for="password" class="form-label">Password:</label> -->
                        <input type="hidden" class="form-control" id="course_id" placeholder="Enter password" name="course_id" value="<%= course_id %>">
                    </div>
                    <br>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block">Add</button>
                    </div>
                    <!-- <div class="login-student">
                        <p class="text-center">Already have an account? <a href="/student/login">login</a></p>
                    </div> -->
                </form>
            </div>
        </div>
   </div>

<h4 class="py-2">Or</h4>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm p-4">
                <h4 class="text-center mb-4">Upload Excel File</h4>
                <form action="/student/upload" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="course_file" class="form-label">Upload Excel File</label>
                        <input type="file" class="form-control" id="student_file" name="student_file" accept=".xlsx,.xls"
                            required>
                    </div>
                    <div class="mb-0">
                        <!-- <label for="password" class="form-label">Password:</label> -->
                        <input type="hidden" class="form-control" id="course_id" placeholder="Enter password" name="course_id"
                            value="<%= course_id %>">
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary w-25">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>